# .env.example - MaachBazar WhatsApp Agent
# Copy to .env and fill with real values (do NOT commit secrets to git)

# Access token for WhatsApp Cloud API (from Facebook App / WhatsApp product)
WHATSAPP_TOKEN=YOUR_WHATSAPP_CLOUD_API_TOKEN_HERE

# Verification token used when setting up webhook (choose a random string)
VERIFY_TOKEN=YOUR_VERIFY_TOKEN_HERE

# Phone number ID (from Facebook/Meta dashboard)
PHONE_NUMBER_ID=YOUR_PHONE_NUMBER_ID_HERE

# App secret used to verify webhook signatures (x-hub-signature-256)
WHATSAPP_APP_SECRET=YOUR_APP_SECRET_HERE

# Optional
NODE_ENV=development
SERVICE_NAME=maachbazar-whatsapp-agent
# WhatsApp Business API
WHATSAPP_TOKEN=your_whatsapp_token_here
VERIFY_TOKEN=your_secure_verify_token_here
PHONE_NUMBER_ID=your_phone_number_id_here
WHATSAPP_APP_SECRET=your_app_secret_here

# App
NODE_ENV=development
LOG_LEVEL=info
